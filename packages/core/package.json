    "tslib": "^1.11.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "immer": "^6.0.5",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "object.entries": "^1.1.1",
    "object.fromentries": "^2.0.2"
  },
  "husky": {
